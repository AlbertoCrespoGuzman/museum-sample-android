<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casonacastaares">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screen2Activity" android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".Screen3Activity" android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".ScreenCreditos" android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden" />
    </application>

</manifest>